<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4472c4"/>
            <stroke android:color="#3748A7" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:bottomLeftRadius="300dp"
                android:topRightRadius="300dp"/>
            <gradient   android:startColor="#051937"
                android:centerColor="#5CAAE7"
                android:endColor="#20EBDE"
                android:angle="45"/>
        </shape>
    </item>
</selector>